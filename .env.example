# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Railway Deployment Settings
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For Railway PostgreSQL: DATABASE_URL=postgresql://postgres:password@host:port/railway

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=10080
JWT_REFRESH_TOKEN_LIFETIME=43200

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1000

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=ai-doc-process

# Document Processing Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx
CHUNK_SIZE=1000
CHUNK_OVERLAP=200 